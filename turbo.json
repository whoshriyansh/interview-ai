{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "MONGO_URI",
        "JWT_SECRET",
        "PORT",
        "ALLOWED_ORIGINS",
        "GROQ_API_KEY",
        "NEXT_PUBLIC_API_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "MONGO_URI",
        "JWT_SECRET",
        "PORT",
        "ALLOWED_ORIGINS",
        "GROQ_API_KEY",
        "NEXT_PUBLIC_API_URL"
      ]
    }
  }
}
